#!/usr/bin/env php

<?php

use Rikudou\SourceGenerators\Processor\SourceGeneratorProcessorFactory;

require_once $_composer_autoload_path ?? __DIR__ . '/../vendor/autoload.php';

$potentialComposerPaths = [
    __DIR__ . '/../../../composer.json',
    __DIR__ . '/../composer.json',
];

$foundComposerJson = null;
foreach ($potentialComposerPaths as $potentialComposerPath) {
    if (file_exists($potentialComposerPath)) {
        $foundComposerJson = $potentialComposerPath;
        break;
    }
}

if (!$foundComposerJson) {
    throw new RuntimeException('Could not find composer.json');
}

$processor = SourceGeneratorProcessorFactory::fromComposerJson($foundComposerJson);
$processor->execute();
$processor->autoloadManager->registerAutoloader();

echo "Source generators have been executed and autoloader has been dumped.", PHP_EOL;
